        <item name="materialIconButtonFilledTonalStyle">@style/Widget.MaterialComponents.Button.IconButton.Colored</item>
        <item name="materialIconButtonOutlinedStyle">@style/Widget.MaterialComponents.Button.IconButton.Outlined</item>
        <item name="materialIconButtonStyle">@style/Widget.MaterialComponents.Button.IconButton</item>
    </style>

    <style name="Widget.MaterialComponents.Button.IconButton" parent="Widget.Material3.Button.IconButton">
